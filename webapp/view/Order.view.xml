<mvc:View
	controllerName="onlineshop.adminspace.controller.Order"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
>
	<Page
		title="{i18n>orderTitle}"
		showNavButton="true"
		navButtonPress=".onNavBack"
	>
		<content>
			<Panel
				backgroundDesign="Transparent"
				expandable="true"
				expanded="true"
				headerText="Lieferadresse"
			>
				<content>
					<VBox>
						<HBox>
							<VBox
								alignItems="Start"
								width="12rem"
							>
								<Label
									text="Vorname"
									labelFor="firstname"
								/>
								<Text
									text="{orders>address/firstname}"
									id="firstname"
								/>
							</VBox>
							<VBox
								alignItems="Start"
								width="12rem"
							>
								<Label
									text="Nachname"
									labelFor="lastname"
								/>
								<Text
									text="{orders>address/lastname}"
									id="lastname"
								/>
							</VBox>
						</HBox>
						<HBox class="sapUiMediumMarginTop">
							<VBox
								alignItems="Start"
								width="12rem"
							>
								<Label
									text="Anschrift"
									labelFor="street"
								/>
								<Text
									text="{orders>address/street} {orders>address/streetnr}"
									id="street"
								/>
							</VBox>
							<VBox
								alignItems="Start"
								width="12rem"
							>
								<Label
									text="Postleitzahl"
									labelFor="zipcode"
								/>
								<Text
									text="{orders>address/zipcode}"
									id="zipcode"
								/>
							</VBox>
							<VBox
								alignItems="Start"
								width="12rem"
							>
								<Label
									text="Stadt"
									labelFor="city"
								/>
								<Text
									text="{orders>address/city}"
									id="city"
								/>
							</VBox>
						</HBox>
					</VBox>
				</content>
			</Panel>
			<Table
				alternateRowColors="true"
				id="table"
				class="saUiResponsiveMargin"
				width="auto"
				items="{
					path: 'orderproducts>/products',
					sorter: {
						path: 'orderproducts>title'
					}
				}"
				headerText="Bestellte Artikel"
			>
				<columns>
					<Column>
						<Text text="{i18n>columnOrderID}"/>
						<footer>
							<ObjectIdentifier title="Gesamt"/>
						</footer>
					</Column>
					<Column>
						<Text text="{i18n>columnValue}"/>
						<footer>
							<ObjectNumber
								number="{
									parts: [{
										path: 'orders>value'
									}, {
										path: 'orders>currency'
									}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {
										showMeasure: false
									}
								}"
								unit="{orders>currency}"
								state="Success"
							/>
						</footer>
					</Column>
					<Column>
						<Text text="{i18n>columnQuantity}"/>
						<footer>
							<ObjectNumber
								number="{orders>quantity}"
								emphasized="true"
							/>
						</footer>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier title="{orderproducts>title}"/>
							<ObjectNumber
								number="{
									parts: [{
										path: 'orderproducts>price'
									}, {
										path: 'orderproducts>currency'
									}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {
										showMeasure: false
									}
								}"
								unit="{orderproducts>currency}"
								state="Success"
							/>
							<ObjectNumber
								number="{orderproducts>quantity}"
								emphasized="false"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Als bezahlt markieren"
					type="Accept"
					enabled="{= !${orders>payed}}"
					icon="sap-icon://payment-approval"
					press="onPayed"
					tooltip="{= ${orders>payed} ? 'Bestellung wurde bereits als bezahlt markiert' : ''}"
				/>
				<Button
					text="Als versendet markieren"
					type="Accept"
					enabled="{
						parts: [{
							path: 'orders>payed'
						}, {
							path: 'orders>sent'
						}],
						formatter: '.formatter.deliveryButtonEnabled'
					}"
					icon="sap-icon://shipping-status"
					press="onSent"
					tooltip="{
						parts: [{
							path: 'orders>payed'
						}, {
							path: 'orders>sent'
						}],
						formatter: '.formatter.deliveryButtonHover'
					}"
				/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>